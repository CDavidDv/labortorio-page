            </div>
            <div class="grid md:grid-cols-2 lg:grid-cols-3  gap-2  items-center">
                {
                    sucursales.map((sucursal) => (

                        <article class=" p-4 overflow-hidden shadow-sm border-[1px] border-solid border-slate-200 rounded-xl  ">
